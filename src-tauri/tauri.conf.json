{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Watchfolio",
  "version": "0.1.0",
  "identifier": "com.watchfolio.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Watchfolio",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://api.themoviedb.org https://cloud.appwrite.io wss://cloud.appwrite.io https://generativelanguage.googleapis.com",
        "img-src": "'self' https://image.tmdb.org data: blob: asset: https://tauri.localhost",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'wasm-unsafe-eval'",
        "font-src": "'self' data:",
        "media-src": "'self' asset: https://tauri.localhost"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Entertainment",
    "shortDescription": "AI-powered media library manager",
    "longDescription": "Watchfolio is an offline-first, AI-powered media library manager for tracking movies and TV shows with real-time cloud sync.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
