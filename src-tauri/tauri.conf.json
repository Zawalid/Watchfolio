{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Watchfolio",
  "version": "0.1.0",
  "identifier": "com.watchfolio.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Watchfolio",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false
      },
      {
        "label": "quick-add",
        "title": "Quick Add - Watchfolio",
        "width": 700,
        "height": 700,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true,
        "url": "/quick-add"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://api.themoviedb.org https://cloud.appwrite.io wss://cloud.appwrite.io https://generativelanguage.googleapis.com",
        "img-src": "'self' https://image.tmdb.org data: blob: asset: https://tauri.localhost",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'wasm-unsafe-eval'",
        "font-src": "'self' data:",
        "media-src": "'self' asset: https://tauri.localhost"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Entertainment",
    "shortDescription": "AI-powered media library manager",
    "longDescription": "Watchfolio is an offline-first, AI-powered media library manager for tracking movies and TV shows with real-time cloud sync.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/{{owner}}/{{repo}}/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "PLACEHOLDER_PUBLIC_KEY_WILL_BE_GENERATED"
    }
  }
}
